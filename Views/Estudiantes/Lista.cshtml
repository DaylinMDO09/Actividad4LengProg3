@model List<EstudianteViewModel>

@if (TempData["MensajeError"] != null)
{
	<div class="alert alert-danger">@TempData["MensajeError"]</div>
}

<h1>Lista de Estudiantes</h1>

<div class="row">
	<div class="col-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Matricula</th>
					<th>Carrera</th>
					<th>Correo institucional</th>
					<th>Número telefónico</th>
					<th>Fecha de nacimiento</th>
					<th>Género</th>
					<th>Turno</th>
					<th>Tipo de ingreso</th>
					<th>Está becado?</th>
					<th>Porcentaje de la beca</th>
					<th>Términos y condiciones</th>
				</tr>
			</thead>
			<tbody>
				@{
					foreach (var it in Model)
					{
						<tr>
						<td>@it.nombreEstudiante</td>
						<td>@it.matriculaEstudiante</td>
						<td>@it.carreraEstudiante</td>
						<td>@it.correoEstudiante</td>
						<td>@it.telefonoEstudiante</td>
						<td>@it.fechaEstudiante</td>
						<td>@it.generoEstudiante</td>
						<td>@it.turnoEstudiante</td>
						<td>@it.ingresoEstudiante</td>
						<td>@it.becaEstudiante</td>
						<td>@it.porcentajebecaEstudiante</td>
						<td>@it.tcEstudiante</td>
						<td>
						<a asp-action="Editar" asp-route-matricula="@it.matriculaEstudiante" class="btn btn-secondary">Editar</a>
						<a asp-action="Eliminar" asp-route-matricula="@it.matriculaEstudiante" class="btn btn-danger">Eliminar</a>
						</td>
						</tr>
					}
				}
			</tbody>
		</table>
	</div>
</div>