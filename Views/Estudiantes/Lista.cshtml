@model List<Actividad4LengProg3.Models.ViewModels.EstudianteFormViewModel>

@if (TempData["MensajeError"] != null)
{
	<div class="alert alert-danger">@TempData["MensajeError"]</div>
}

<h1>Lista de Estudiantes</h1>

<div class="row">
	<div class="col-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Matricula</th>
					<th>Carrera</th>
					<th>Correo institucional</th>
					<th>Número telefónico</th>
					<th>Fecha de nacimiento</th>
					<th>Género</th>
					<th>Turno</th>
					<th>Tipo de ingreso</th>
					<th>Está becado?</th>
					<th>Porcentaje de la beca</th>
					<th>Términos y condiciones</th>
				</tr>
			</thead>
			<tbody>
				@{
					foreach (var it in Model)
					{
						<tr>
						<td>@it.Estudiante.Nombrecompleto</td>
						<td>@it.Estudiante.Matricula</td>
						<td>@it.Estudiante.Carrera</td>
						<td>@it.Estudiante.Correoinstitucional</td>
						<td>@it.Estudiante.Telefono</td>
						<td>@it.Estudiante.Fechanac</td>
						<td>@it.Estudiante.Genero</td>
						<td>@it.Estudiante.Turno</td>
						<td>@it.Estudiante.Tipoingreso</td>
						<td>@it.Estudiante.Estabecado</td>
						<td>@it.Estudiante.Porcentajebeca</td>
						<td>@it.Estudiante.Terminosycondiciones</td>
						<td>
						<a asp-action="Editar" asp-route-matricula="@it.Estudiante.Matricula" class="btn btn-secondary">Editar</a>
						<a asp-action="Eliminar" asp-route-matricula="@it.Estudiante.Matricula" class="btn btn-danger">Eliminar</a>
						</td>
						</tr>
					}
				}
			</tbody>
		</table>
	</div>
</div>