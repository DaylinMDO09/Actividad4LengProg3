@model EstudianteViewModel;


<h1>Registro de Estudiante</h1>


@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<form class="form-control" asp-action="Registrar" asp-controller="Estudiantes" method="post">
        <div>
            <label asp-for="nombreEstudiante"></label>
		    <input asp-for="nombreEstudiante" class="form-control" />
            <span asp-validation-for="nombreEstudiante" class="text-danger"></span>
        </div>

        <div>
            <label class="form-label" asp-for="matriculaEstudiante"></label>
		    <input asp-for="matriculaEstudiante" class="form-control" />
            <span asp-validation-for="matriculaEstudiante" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="carreraEstudiante"></label>
		    <select asp-for="carreraEstudiante" class="form-select" asp-items="@(new SelectList (
                                                                    new[] { "Ingeniería en Software",
                                                                            "Odontología",
                                                                            "Administración de empresas",
                                                                            "Enfermería",
                                                                            "Psicología" }))">
                <option value="">Elige una carrera</option>
            </select>
            <span asp-validation-for="carreraEstudiante" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="correoEstudiante"></label>
		    <input asp-for="correoEstudiante" class="form-control" />
            <span asp-validation-for="correoEstudiante" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="telefonoEstudiante"></label>
		    <input asp-for="telefonoEstudiante" class="form-control" />
            <span asp-validation-for="telefonoEstudiante" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="fechaEstudiante"></label>
		    <input asp-for="fechaEstudiante" class="form-control" />
            <span asp-validation-for="fechaEstudiante" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="generoEstudiante"></label>
		    <input type="radio" asp-for="generoEstudiante" value="Masculino" /> Masculino
		    <input type ="radio" asp-for="generoEstudiante" value="Femenino" /> Femenino
        </div>
        <div>
            <label asp-for="turnoEstudiante"></label>
		    <select asp-for="turnoEstudiante" class="form-control" asp-items="@(new SelectList(
                                                                              new[] { "Matutino",
                                                                                      "Vespertino",
                                                                                      "Nocturno" }))">
                <option value="">Elegir un turno</option>
            </select>
            <span asp-validation-for="turnoEstudiante" class="text-danger"></span>
        </div>

        <div>
            <label class="form-label" asp-for="TipoIngreso">Tipo de Ingreso</label>
            <select class="form-select" asp-for="TipoIngreso" asp-items="@(new SelectList(
                                                                                                                     new[] { "Nuevo Ingreso",
                                                                                                                             "Reingreso",
                                                                                                                             "Transferencia" }
                                                                                                                             ))">
                <option value="">-- Seleccione tipo de ingreso --</option>
            </select>
            <span asp-validation-for="TipoIngreso" class="text-danger"></span>
        </div>

        <div>
            <label class="form-label" asp-for="EstaBecado">¿Esta Becado?</label>
            <input class="form-check-input" asp-for="EstaBecado" type="checkbox" />
        </div>

        <div>
            <label class="form-label" asp-for="PorcentajeBeca">Porcentaje de su Beca</label>
            <input class="form-control" asp-for="PorcentajeBeca" type="number" min="0" max="100" />
            <span asp-validation-for="PorcentajeBeca" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input class="form-control" type="hidden" asp-for="TerminosYCondiciones" value="true" />
            <input class="form-check-input" type="checkbox" asp-for="TerminosYCondiciones" value="true" />
            <label class="form-check-label" asp-for="TerminosYCondiciones">Acepto los términos y condiciones</label>
            <span asp-validation-for="TerminosYCondiciones" class="text-danger"></span>


        </div>

        <br />

        <div>
            <button class="btn btn-primary" type="submit">Registrar</button>
            <a href="/Estudiantes/Lista" class="btn btn-secondary">Lista de estudiantes registrados</a>

        </div>
    </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

